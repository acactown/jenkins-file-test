<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{[yyyy/MM/dd - HH:mm:ss.SSS]}) %highlight(%-5level) %yellow([%thread]) %green([%logger{36}]) - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="org.acactown" level="DEBUG"/>

    <logger name="cucumber.api" level="INFO"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
